@page
@model asp_book.Pages.Groups.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Group.GroupName" class="control-label"></label>
                <input asp-for="Group.GroupName" class="form-control" />
                <span asp-validation-for="Group.GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.Faculty" class="control-label"></label>
                <select asp-for="Group.FacultyId" class="form-control"
                        asp-items="@Model.FacultyNameSL">
                    <option value="">-- Select Faculty --</option>
                </select>
                <span asp-validation-for="Group.FacultyId" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
